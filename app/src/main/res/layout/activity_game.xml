<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.everlong.mentate.game.ui.GameActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/dimen_56dp"
        android:layout_height="@dimen/dimen_56dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/category_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:gravity="center"
            android:padding="@dimen/dimen_24dp"
            android:text="Category Name"
            android:textSize="28sp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/dimen_24dp"
            android:elevation="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/category_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/dimen_24dp"
                android:text="Test Description"
                android:textSize="18sp" />
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/proceed_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_56dp"
            android:layout_marginLeft="@dimen/dimen_56dp"
            android:layout_marginRight="@dimen/dimen_56dp"
            android:background="@color/colorAccent"
            android:text="Proceed"
            android:textColor="@color/white"
            android:textSize="@dimen/fontsize_18sp" />
    </LinearLayout>
</RelativeLayout>
